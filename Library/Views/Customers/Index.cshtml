@model List<Library.Entities.Customers>

@{
    ViewBag.Title = "Посетители";
}

<h2>Посетители</h2>

<div>
    <table class="table">
        @Html.ActionLink("Создать", "CreateOrEdit", "Customers")
        <tr>
            <th>Имя/Фамилия</th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>@item.fullName</th>
                
                <th>
                    @Html.ActionLink("Редактировать", "CreateOrEdit", "Customers", new { id = item.id }, null)
                    @Html.ActionLink("Удалить", "Delete", "Customers", new { id = item.id }, null)
                </th>

            </tr>
        }
    </table>
</div>