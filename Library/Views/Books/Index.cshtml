@model List<Library.Models.BooksViewModel>
@{
    ViewBag.Title = "Книги";
}

<h2>Книги</h2>

<div>
    <table class="table">
        @Html.ActionLink("Создать", "CreateOrEdit", "Books")
        <tr>
            <th><th>
            <th>Наименование</th>
            <th>Автор</th>
            <th>Кол-во страниц</th>
            <th>Жанр</th>
            <th>Стоимость</th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {


            
            <tr>
                <th><img src="data:image;base64,@System.Convert.ToBase64String(@item.BookCover)" width="80" height="80" />    </th>
                <th>@item.title</th>
                <th>@item.AuthorName</th>
                <th>@item.pages</th>
                <th>@item.GenreName</th>
                <th>@item.price</th>
                <th>
                    @Html.ActionLink("Редактировать", "CreateOrEdit", "Books", new { id = item.id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Удалить", "Delete", "Books", new { id = item.id }, new { @class = "btn btn-danger" })
                </th>

            </tr>
        }
    </table>
</div>